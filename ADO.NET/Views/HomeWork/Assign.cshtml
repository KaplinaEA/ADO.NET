@model Entities.Homework_Student
<input type="hidden" name="IdUser" value="@ViewData["IdUser"]" />
<input type="hidden" name="id" value="@ViewData["id"]" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Homework_Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label for="userName">Студент:</label>
        @Html.DropDownList("userName".ToString(), ViewBag.Items as SelectList)
    </div>


        <div class="form-group">
            <label for="grade">Оценка:</label>
            <select name="grade">
                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
                <option value=5>5</option>
            </select>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { IdUser = @ViewData["IdUser"] })
</div>
