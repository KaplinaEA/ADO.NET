@model IEnumerable<Entities.Homework>
<input type="hidden" name="IdUser = @ViewData["Id"]" value="@ViewData["IdUser"]" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.text)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.text)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id, IdUser = @ViewData["IdUser"] }) |
                @Html.ActionLink("Details", "Details", new { id = item.id, IdUser = @ViewData["IdUser"] }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id, IdUser = @ViewData["IdUser"] }) |
                @Html.ActionLink("Assign", "Assign", new { id = item.id, IdUser = @ViewData["IdUser"] })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Teacher", "Index", "Teacher", new { Id = @ViewData["IdUser"] })
</div>
